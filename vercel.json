{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "pages/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/sync-quotes",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/health-check", 
      "schedule": "0 */6 * * *"
    }
  ]
}
